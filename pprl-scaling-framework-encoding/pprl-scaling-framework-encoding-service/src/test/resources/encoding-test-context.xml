<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hdp="http://www.springframework.org/schema/hadoop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/hadoop http://www.springframework.org/schema/hadoop/spring-hadoop.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="build.properties"/>

    <!-- Tool Runner configuration -->
    <hdp:tool-runner id="encodeDatasetToolRunner"
                     jar="file://${build.test.dir}/pprl-scaling-framework-encoding-mapreduce-${build.version}.jar"
                     tool-class="gr.upatras.ceid.pprl.encoding.mapreduce.EncodingTool"
                     close-fs="false"
                     libs="file://${build.test.dir}/avro-mapred-1.7.6-cdh5.4.0-hadoop2.jar,
                           file://${build.test.dir}/avro-1.7.6-cdh5.4.0.jar,
                           file://${build.test.dir}/pprl-scaling-framework-encoding-lib-${build.version}.jar"/>

    <!-- component scan on service package-->
    <bean id="datasetsService" class="gr.upatras.ceid.pprl.encoding.service.EncodingService"/>
</beans>